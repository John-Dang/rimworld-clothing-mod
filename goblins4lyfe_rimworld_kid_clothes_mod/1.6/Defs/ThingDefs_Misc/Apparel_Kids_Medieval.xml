<!-- +++++ Kid Coronet +++++ -->
<ThingDef ParentName="ChildApparelMakeableBase">
    <defName>Apparel_Goblins4Lyfe_KidCoronet</defName>
    <label>kid coronet</label>
    <description>A small crown-like piece of headwear made of metal. The mark of any worthy heir to the throne.</description>
    <smeltable>true</smeltable>
    <thingCategories>
      <li>HeadgearNoble</li>
    </thingCategories>
    <recipeMaker>
      <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
      <workSkill>Crafting</workSkill>
      <effectWorking>Smith</effectWorking>
      <soundWorking>Recipe_Smith</soundWorking>
      <recipeUsers>
        <li>ElectricSmithy</li>
        <li>FueledSmithy</li>
      </recipeUsers>
      <defaultIngredientFilter>
        <categories>
          <li>Root</li>
        </categories>
        <disallowedThingDefs>
          <li>Jade</li>
          <li>Uranium</li>
          <li MayRequire="Ludeon.RimWorld.Anomaly">Bioferrite</li>
        </disallowedThingDefs>
      </defaultIngredientFilter>
      <researchPrerequisite>RoyalApparel</researchPrerequisite>
      <displayPriority>220</displayPriority>
    </recipeMaker>
    <graphicData>
      <texPath>Apparel/KidCoronet/KidCoronet</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>(0.8, 0.8)</drawSize>
    </graphicData>
    <uiIconScale>1.15</uiIconScale>
    <costStuffCount>25</costStuffCount>
    <stuffCategories>
      <li>Metallic</li>
      <!-- Stuff like jade here maybe? -->
    </stuffCategories>
    <statBases>
      <MaxHitPoints>80</MaxHitPoints>
      <WorkToMake>6400</WorkToMake>
      <Mass>0.35</Mass>
      <EquipDelay>0.8</EquipDelay>
    </statBases>
    <equippedStatOffsets>
      <SocialImpact>0.2</SocialImpact>
      <SlaveSuppressionOffset MayRequire="Ludeon.RimWorld.Ideology">-0.2</SlaveSuppressionOffset>
    </equippedStatOffsets>
    <apparel>
      <countsAsClothingForNudity>false</countsAsClothingForNudity>
      <bodyPartGroups>
        <li>UpperHead</li>
      </bodyPartGroups>
      <parentTagDef>ApparelHead</parentTagDef>
      <wornGraphicPath>Apparel/KidCoronet/KidCoronet</wornGraphicPath>
      <layers>
        <li>Overhead</li>
      </layers>
      <tags>
        <li>Royal</li>
        <li>RoyalTier5</li>
      </tags>
      <canBeDesiredForIdeo>false</canBeDesiredForIdeo>
      <canBeGeneratedToSatisfyWarmth>false</canBeGeneratedToSatisfyWarmth>
      <canBeGeneratedToSatisfyToxicEnvironmentResistance>false</canBeGeneratedToSatisfyToxicEnvironmentResistance>
    </apparel>
    <colorGenerator Class="ColorGenerator_StandardApparel" />
    <tradeTags>
      <li>Clothing</li>
    </tradeTags>
  </ThingDef>

