<?xml version="1.0" encoding="utf-8" ?>
<Defs>
    <!-- ##### Neolithic ##### -->
    <!-- +++++ Kid War Mask +++++ -->
    <ThingDef ParentName="HatMakeableBase">
<defName>Apparel_KidWarMask</defName>
    <label>kid war mask</label>
    <description>A small and simple war mask. It hides the wearer's face and makes them less scared.</description>
    <techLevel>Neolithic</techLevel>
    <graphicData>
      <texPath>Things/Headgear/KidWarMask/KidWarMask</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>0.80</drawSize>
    </graphicData>
    <uiIconScale>1.15</uiIconScale>
    <stuffCategories>
      <li>Woody</li>
    </stuffCategories>
    <costStuffCount>10</costStuffCount>
    <statBases>
      <WorkToMake>2400</WorkToMake>
      <MaxHitPoints>80</MaxHitPoints>
      <Mass>0.7</Mass>
      <StuffEffectMultiplierArmor>0.3</StuffEffectMultiplierArmor>
      <StuffEffectMultiplierInsulation_Cold>0.05</StuffEffectMultiplierInsulation_Cold>
      <StuffEffectMultiplierInsulation_Heat>0.05</StuffEffectMultiplierInsulation_Heat>
      <EquipDelay>1.5</EquipDelay>
    </statBases>
    <equippedStatOffsets>
      <PainShockThreshold>0.10</PainShockThreshold>
    </equippedStatOffsets>
    <apparel>
    <developmentalStageFilter>Child</developmentalStageFilter>
      <bodyPartGroups>
        <li>FullHead</li>
      </bodyPartGroups>
      <wornGraphicPath>Things/Headgear/KidWarMask/KidWarMask</wornGraphicPath>
      <renderSkipFlags>
        <li>None</li>
      </renderSkipFlags>
      <drawData>
        <dataNorth>
          <layer>-3</layer>
        </dataNorth>
      </drawData>
      <ideoDesireAllowedFactionCategoryTags><li>Tribal</li></ideoDesireAllowedFactionCategoryTags>
      <layers> 
        <li>Overhead</li>
      </layers>
      <defaultOutfitTags>
        <li>Soldier</li>
      </defaultOutfitTags>
    </apparel>
    <recipeMaker>
      <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
      <workSkill>Crafting</workSkill>
      <effectWorking>Sculpt</effectWorking>
      <soundWorking>Recipe_Sculpt</soundWorking>
      <recipeUsers>
        <li>CraftingSpot</li>
      </recipeUsers>
      <unfinishedThingDef>UnfinishedSculpture</unfinishedThingDef>
      <factionPrerequisiteTags>
        <li>Tribal</li>
      </factionPrerequisiteTags>
    </recipeMaker>
    <tradeTags>
      <li>Armor</li>
      <li>BasicClothing</li>
    </tradeTags>
    </ThingDef>

    <!-- +++++ Kid Visage Mask +++++ -->
    <ThingDef ParentName="HatMakeableBase">
    <defName>Apparel_KidVisageMask</defName>
    <label>kid visage mask</label>
    <description>A hard facial mask that resembles a stylized face. Very popular at children's parties, usually in the shape of a cartoon animal face.</description>
    <techLevel>Neolithic</techLevel>
    <graphicData>
      <texPath>Things/Headgear/KidVisageMask/KidVisageMask</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <stuffCategories>
      <li>Woody</li>
      <li>Metallic</li>
    </stuffCategories>
    <costStuffCount>10</costStuffCount>
    <statBases>
      <WorkToMake>1600</WorkToMake>
      <MaxHitPoints>90</MaxHitPoints>
      <Mass>0.05</Mass>
      <EquipDelay>1.5</EquipDelay>
      <StuffEffectMultiplierArmor>0.3</StuffEffectMultiplierArmor>
      <StuffEffectMultiplierInsulation_Cold>0.05</StuffEffectMultiplierInsulation_Cold>
      <StuffEffectMultiplierInsulation_Heat>0.05</StuffEffectMultiplierInsulation_Heat>
    </statBases>
    <apparel>
    <developmentalStageFilter>Child</developmentalStageFilter>
      <bodyPartGroups>
        <li>FullHead</li>
      </bodyPartGroups>
      <wornGraphicPaths>
        <li>Headgear/VisageMask/VisageMaskA</li>
        <li>Headgear/VisageMask/VisageMaskB</li>
        <li>Headgear/VisageMask/VisageMaskC</li>
      </wornGraphicPaths>
      <layers>
        <li>Overhead</li>
      </layers>
      <defaultOutfitTags>
        <li>Worker</li>
      </defaultOutfitTags>
      <renderSkipFlags>
        <li>None</li>
      </renderSkipFlags>
      <drawData>
        <dataNorth>
          <layer>-3</layer>
        </dataNorth>
      </drawData>
      <canBeGeneratedToSatisfyWarmth>false</canBeGeneratedToSatisfyWarmth>
      <canBeGeneratedToSatisfyToxicEnvironmentResistance>false</canBeGeneratedToSatisfyToxicEnvironmentResistance>
    </apparel>
    <colorGenerator Class="ColorGenerator_StandardApparel" />
    <tradeTags>
      <li>Clothing</li>
      <li>Armor</li>
    </tradeTags>
    <recipeMaker>
      <displayPriority>155</displayPriority>
    </recipeMaker>
  </ThingDef>

    <!-- +++++ Kid Burka +++++ -->
    <ThingDef ParentName="ChildApparelMakeableBase">
    <defName>Apparel_KidBurka</defName>
    <label>kid burka</label>
    <description>A child-sized garment that conceals the wearer's entire head and body.</description>
    <techLevel>Neolithic</techLevel>
    <graphicData>
      <texPath>Things/Apparel/KidBurka/KidBurka</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <costStuffCount>30</costStuffCount>
    <stuffCategories>
      <li>Fabric</li>
    </stuffCategories>
    <statBases>
      <MaxHitPoints>100</MaxHitPoints>
      <WorkToMake>3200</WorkToMake>
      <Mass>0.5</Mass>
      <StuffEffectMultiplierArmor>0.2</StuffEffectMultiplierArmor>
      <StuffEffectMultiplierInsulation_Cold>0.1</StuffEffectMultiplierInsulation_Cold>
      <StuffEffectMultiplierInsulation_Heat>0.2</StuffEffectMultiplierInsulation_Heat>
      <EquipDelay>1.5</EquipDelay>
    </statBases>
    <equippedStatOffsets>
      <MoveSpeed>-0.4</MoveSpeed>
    </equippedStatOffsets>
    <apparel>
      <bodyPartGroups>
        <li>FullHead</li>
        <li>UpperHead</li>
        <li>Neck</li>
        <li>Shoulders</li>
        <li>Torso</li>
        <li>Legs</li>
        <li>Arms</li>
      </bodyPartGroups>
      <wornGraphicPath>Things/Apparel/KidBurka/KidBurka</wornGraphicPath>
      <blocksAddedPartWoundGraphics>true</blocksAddedPartWoundGraphics>
      <parentTagDef>ApparelBody</parentTagDef>
      <renderSkipFlags>
        <li>Head</li>
      </renderSkipFlags>
      <drawData>
        <defaultData>
          <layer>83</layer>
        </defaultData>
      </drawData>
      <layers Inherit="False">
        <li>Shell</li>
      </layers>
      <defaultOutfitTags>
        <li>Worker</li>
      </defaultOutfitTags>
      <canBeGeneratedToSatisfyWarmth>false</canBeGeneratedToSatisfyWarmth>
      <canBeGeneratedToSatisfyToxicEnvironmentResistance>false</canBeGeneratedToSatisfyToxicEnvironmentResistance>
    </apparel>
    <colorGenerator Class="ColorGenerator_StandardApparel" />
    <recipeMaker>
      <displayPriority>170</displayPriority>
    </recipeMaker>
  </ThingDef>

  

</Defs>